<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>STUDENT</title>
</head>

<body>
    <!-- PARTIALS FOR HEADER -->
    <%- include('partials/header') %>

    <form class="w-50  mx-auto mt-4" action="/student/modifydone" method="post">
        <!-- PARTIALS FOR STUDENT -->
        <%- include('partials/student') %>

        <fieldset id="interviewfield">
                <legend>Interviews</legend>

                <% for( let company of studnt.interviews){%>
                        <div class="mb-3" style="display: flex;justify-content: space-between;">
                                <div class="mb-3">
                                    <label for="input-companyname" class="form-label">Company</label>
                                    <input type="text" class="form-control" id="input-companyname" name="companyname" value="<%=company.companyname%>">
                                </div>
                            <div class="mb-3">
                                <label for="input-date" class="form-label">Date</label>
                                <input type="date" class="form-control" id="input-date" name="companydate" value="<%=company.scheduledate%>">
                            </div>
                            <div class="mb-3">
                                <label for="rstatus" class="form-label">Result</label>
                                    <select class="form-select" aria-label="Default select example" name="result" id="rstatus">
                                        <option selected disabled><%=company.result%></option>
                                            <option value="Selected">Selected</option>
                                            <option value="Not Selected">Not Selected</option> 
                                            <option value="On Hold">On Hold</option>
                                            <option value="Interview Pending">Interview Pending</option>
                                    </select>
                            </div> 
                        </div>     
                    <%}%>
            </fieldset>


        <div  class="mb-3">
            <div class="d-flex justify-content-start">
                <a href="/" type="button" class="btn btn-primary align-self-center">Cancel</a>
            </div>
            <div class="d-flex justify-content-end" style="margin-top: -38px;">
                    <button class="btn btn-primary align-self-center">Update</button>
            </div>
        </div>

    </form>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <script>
        document.getElementById('interviewfield').disabled = true;;
        document.getElementById('input-email').readOnly = true;
    </script>
    <%- include('partials/header') %>
</body>
</html>
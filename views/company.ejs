<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <title>COMPANY</title>
</head>

<body>
    <!-- PARTIALS FOR STUDENT -->
    <%- include('partials/header') %>
    <div class="w-75 mx-auto mt-5">

        <input class="form-control" id="myInput" type="text" placeholder="Search................" style="border: 3px solid black;font-size: x-large;">
        <br>

        <div class="row">
            <div class="col-6">
                <h1>Interviews</h1>
            </div>
            <div class="col-6 d-flex justify-content-end">
                <a href="/company/allocateinterview" type="button" class="btn btn-primary align-self-center">Allocate Interview</a>
            </div>
        </div>

         <% if(studentlist.length > 0) {%>
        <div class="mt-3 mb-3">   
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                    <th scope="col">Company</th>
                    <th scope="col">Student</th>
                    <th scope="col">Email</th>
                    <th scope="col">Contact</th>
                    <th scope="col">Batch</th>
                    <th scope="col">InterviewDate</th>
                    <th scope="col">Result</th>
                    </tr>
                </thead>
               
                <tbody id="myTable">
                     <% for(let student of studentlist){%>
                        <%i=0%>
                        <% while(i< student.interviews.length){%>
                    <tr class="row-ref">
                        <th scope="row"><%=student.interviews[i].companyname%></th>
                        <td><%=student.name%></td>
                        <td><%=student.email%></td>
                        <td><%=student.mobilenumber%></td>
                        <td><%=student.batch%></td>
                        <td><%=student.interviews[i].scheduledate%></td>
                        <td>
                            <form style="display: flex;align-items: center;justify-content: center;" action="/company/update/<%=student.id%>" method="post">
                                <input hidden type="text" name="cname" value="<%=student.interviews[i].companyname%>">
                                <select class="form-select" aria-label="Default select example" name="companyresult" id="istatus" disabled style="min-width: 130px;">
                                        <option selected id="delete-options"><%=student.interviews[i].result%></option>
                                        <option value="Selected">Selected</option>
                                        <option value="Not Selected">Not Selected</option> 
                                        <option value="On Hold">On Hold</option>
                                        <option value="Pending">Pending</option>
                                </select>
                                <a  type="button" class="btn btn-warning btn-small  m-2" id="chngebutton">Change</a>
                                <button type ="submit" class="btn btn-success btn-small  m-2">UPDATE</button>
                            </form>
                        </td>
                        
                    </tr>
                    <%i++%>
                    <%}%>
                  <%}%>
                </tbody>
            </table>
        </div>
         <%}else{%>
            <div class="w-75 mx-auto mt-5">
                <h2>NO RECORDS ARE FOUND.............:(</h2>
            </div>
        <%}%>
         
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <script>
            $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
            $('tr').click(function(event){
                let self = $(this);
                if(event.target.id == "chngebutton"){
                    self.find("#delete-options").remove();
                    self.find("#istatus").prop( "disabled", false );
               }})
            
            });
    </script>
</body>
</html>